          "200": {
            "description": "All available features",
            "content": {
              "application/json": {
                "schema": {
                  "title": "FeaturesResponse",
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/FeaturesResponse"
                    },
                    "meta": {
                      "$ref": "#/components/schemas/Meta"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - missing or invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/v1/features/{feature_id}": {
      "get": {
        "tags": [
          "Features"
        ],
        "summary": "Get feature by ID",
        "description": "Get details of a specific feature by its identifier",
        "parameters": [
          {
            "name": "feature_id",
            "in": "path",
            "description": "Feature ID to look up",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Feature ID to look up"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Feature details",
            "content": {
              "application/json": {
                "schema": {
                  "title": "FeatureResponse",
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/FeatureResponse"
                    },
                    "meta": {
                      "$ref": "#/components/schemas/Meta"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - missing or invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/v1/plans": {
      "get": {
        "tags": [
          "Plans"
        ],
        "summary": "List all plans",
        "description": "Get all available subscription plans with their pricing variants. Use ?expand=features to include features.",
        "parameters": [
          {
            "name": "expand",
            "in": "query",
            "description": "Fields to expand (use ?expand=features)",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/PlansExpand"
              },
              "description": "Fields to expand (use ?expand=features)"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of available plans",
            "content": {
              "application/json": {
                "schema": {
                  "title": "PlansResponse",
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/PlansResponse"
                    },
                    "meta": {
                      "$ref": "#/components/schemas/Meta"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
