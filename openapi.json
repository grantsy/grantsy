{
  "openapi": "3.1.0",
  "info": {
    "title": "Grantsy Entitlements API",
    "description": "Microservice for managing SaaS feature entitlements",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/check": {
      "get": {
        "tags": [
          "Entitlements"
        ],
        "summary": "Check feature access",
        "description": "Check if a user has access to a specific feature based on their subscription plan. Use ?expand=feature\u0026expand=plan\u0026expand=plan.features to include additional details.",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "description": "User ID to check access for",
            "schema": {
              "description": "User ID to check access for",
              "type": "string"
            }
          },
          {
            "name": "feature",
            "in": "query",
            "description": "Feature ID to check access for",
            "schema": {
              "description": "Feature ID to check access for",
              "type": "string"
            }
          },
          {
            "name": "expand",
            "in": "query",
            "description": "Fields to expand (use ?expand=feature\u0026expand=plan\u0026expand=plan.features)",
            "schema": {
              "description": "Fields to expand (use ?expand=feature\u0026expand=plan\u0026expand=plan.features)",
              "items": {
                "$ref": "#/components/schemas/CheckExpand"
              },
              "type": [
                "array",
                "null"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Feature access check result",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/CheckResponse"
                    },
                    "meta": {
                      "$ref": "#/components/schemas/Meta"
                    }
                  },
                  "title": "CheckResponse",
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - missing or invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
