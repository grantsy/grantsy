  "components": {
    "schemas": {
      "CheckExpand": {
        "enum": [
          "feature",
          "plan",
          "plan.features"
        ],
        "type": "string"
      },
      "CheckResponse": {
        "properties": {
          "allowed": {
            "description": "Whether the user has access to this feature",
            "type": "boolean"
          },
          "feature": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Feature",
                "type": "object"
              }
            ],
            "description": "The checked feature (requires expand=feature)",
            "type": "object"
          },
          "plan": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Plan",
                "type": "object"
              }
            ],
            "description": "The user's current plan (requires expand=plan or expand=plan.features)",
            "type": "object"
          },
          "reason": {
            "description": "Reason for the access decision",
            "enum": [
              "no_subscription",
              "default_plan",
              "feature_in_plan",
              "insufficient_plan"
            ],
            "type": "string"
          },
          "user_id": {
            "description": "The user ID",
            "type": "string"
          }
        },
        "required": [
          "allowed",
          "user_id",
          "reason"
        ],
        "type": "object"
      },
      "ErrorResponse": {
        "properties": {
          "error": {
            "$ref": "#/components/schemas/ProblemDetails"
          }
        },
        "required": [
          "error"
        ],
        "type": "object"
      },
      "Feature": {
        "properties": {
          "description": {
            "description": "Feature description",
            "type": "string"
          },
          "id": {
            "description": "Feature identifier",
            "type": "string"
          },
          "name": {
            "description": "Feature display name",
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ],
        "type": "object"
      },
      "FeatureResponse": {
        "properties": {
          "feature": {
            "$ref": "#/components/schemas/Feature",
            "description": "Feature details"
          }
        },
        "required": [
          "feature"
        ],
        "type": "object"
      },
      "FeaturesResponse": {
        "properties": {
          "features": {
            "description": "All available features",
            "items": {
              "$ref": "#/components/schemas/Feature"
            },
            "type": "array"
          }
        },
        "required": [
          "features"
        ],
        "type": "object"
      },
      "FieldError": {
        "properties": {
          "field": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "field",
          "message"
        ],
        "type": "object"
      },
      "LemonSqueezySubscription": {
        "properties": {
          "billing_anchor": {
            "description": "Day of month for billing",
            "type": "integer"
          },
          "cancelled": {
            "description": "Whether the subscription has been cancelled",
            "type": "boolean"
          },
          "card_brand": {
            "description": "Payment card brand",
            "type": "string"
          },
          "card_last_four": {
            "description": "Last four digits of payment card",
            "type": "string"
          },
          "created_at": {
            "description": "Unix timestamp when subscription was created",
            "format": "int64",
            "type": "integer"
          },
          "customer_id": {
            "description": "LemonSqueezy customer ID",
            "type": "integer"
          },
          "ends_at": {
            "description": "Unix timestamp when subscription ends",
            "type": [
              "null",
              "integer"
            ]
          },
          "id": {
            "description": "LemonSqueezy subscription ID",
            "type": "integer"
          },
          "order_id": {
            "description": "LemonSqueezy order ID",
            "type": "integer"
          },
          "product_id": {
            "description": "LemonSqueezy product ID",
            "type": "integer"
          },
          "product_name": {
            "description": "Product display name",
            "type": "string"
          },
          "renews_at": {
            "description": "Unix timestamp when subscription renews",
            "format": "int64",
            "type": "integer"
          },
          "status": {
            "description": "Subscription status",
            "type": "string"
          },
          "status_formatted": {
            "description": "Human-readable subscription status",
            "type": "string"
          },
          "subscription_item_id": {
            "description": "LemonSqueezy subscription item ID",
            "type": "integer"
          },
          "trial_ends_at": {
            "description": "Unix timestamp when trial ends",
            "type": [
              "null",
              "integer"
            ]
          },
          "updated_at": {
            "description": "Unix timestamp when subscription was last updated",
            "format": "int64",
            "type": "integer"
          },
          "variant_id": {
            "description": "LemonSqueezy variant ID",
            "type": "integer"
          },
          "variant_name": {
            "description": "Variant display name",
            "type": "string"
          }
        },
        "required": [
          "id",
          "customer_id",
          "order_id",
          "product_id",
          "product_name",
          "variant_id",
          "variant_name",
          "status",
          "status_formatted",
          "card_brand",
          "card_last_four",
          "cancelled",
          "billing_anchor",
          "subscription_item_id",
          "renews_at",
          "created_at",
          "updated_at"
        ],
        "type": "object"
      },
      "Meta": {
        "properties": {
          "request_id": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "request_id",
          "timestamp",
          "version"
        ],
        "type": "object"
      },
      "Plan": {
        "properties": {
          "description": {
            "description": "Plan description",
            "type": "string"
          },
          "features": {
            "description": "Features included in this plan",
            "items": {
              "$ref": "#/components/schemas/Feature"
            },
            "type": [
              "array",
              "null"
            ]
          },
          "id": {
            "description": "Plan identifier",
            "type": "string"
          },
          "name": {
            "description": "Plan display name",
            "type": "string"
          },
          "variants": {
            "description": "Pricing variants for this plan",
            "items": {
              "$ref": "#/components/schemas/Variant"
            },
            "type": "array"
          }
        },
        "required": [
          "id",
          "name"
        ],
        "type": "object"
      },
      "PlanExpand": {
        "enum": [
          "features"
        ],
        "type": "string"
      },
      "PlanResponse": {
        "properties": {
          "plan": {
            "$ref": "#/components/schemas/Plan",
            "description": "Plan details"
          }
        },
        "required": [
          "plan"
        ],
        "type": "object"
      },
      "PlansExpand": {
        "enum": [
          "features"
        ],
        "type": "string"
      },
      "PlansResponse": {
        "properties": {
          "plans": {
            "description": "List of available plans",
            "items": {
              "$ref": "#/components/schemas/Plan"
            },
            "type": "array"
          }
        },
        "required": [
          "plans"
        ],
        "type": "object"
      },
      "ProblemDetails": {
        "properties": {
          "detail": {
            "type": "string"
          },
          "fields": {
            "items": {
              "$ref": "#/components/schemas/FieldError"
            },
            "type": "array"
          },
          "request_id": {
            "type": "string"
          },
          "status": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "enum": [
              "https://grantsy.example/errors/validation-failed",
              "https://grantsy.example/errors/bad-request",
              "https://grantsy.example/errors/not-found",
              "https://grantsy.example/errors/unauthorized",
              "https://grantsy.example/errors/internal-error"
            ],
            "type": "string"
          }
        },
        "required": [
          "type",
          "title",
          "detail",
          "status",
          "request_id"
        ],
        "type": "object"
      },
      "ProviderSubscription": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/LemonSqueezySubscription"
          }
        ],
        "type": "object"
      },
      "RawSubscription": {
        "properties": {
          "data": {
            "$ref": "#/components/schemas/ProviderSubscription",
            "description": "Provider-specific subscription data"
          },
          "provider": {
            "description": "Provider identifier",
            "enum": [
              "lemonsqueezy"
            ],
            "type": "string"
          }
        },
        "required": [
          "provider",
          "data"
        ],
        "type": "object"
      },
      "UserExpand": {
        "enum": [
          "plan",
          "features",
          "subscription"
        ],
        "type": "string"
      },
      "UserResponse": {
        "properties": {
          "features": {
            "description": "Features available to the user (requires expand=features)",
            "items": {
              "$ref": "#/components/schemas/Feature"
            },
            "type": [
              "array",
              "null"
            ]
          },
          "plan": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/Plan",
                "type": "object"
              }
            ],
            "description": "Plan details (requires expand=plan)",
            "type": "object"
          },
          "plan_id": {
            "description": "The user's current plan ID",
            "type": "string"
          },
          "subscription": {
            "anyOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/UserSubscription",
                "type": "object"
              }
            ],
            "description": "Subscription details (requires expand=subscription)",
            "type": "object"
          },
          "user_id": {
            "description": "The user ID",
            "type": "string"
          }
        },
        "required": [
          "user_id",
          "plan_id"
        ],
        "type": "object"
      },
      "UserSubscription": {
        "properties": {
          "cancelled": {
            "description": "Whether the subscription has been cancelled",
            "type": "boolean"
          },
          "ends_at": {
            "description": "Unix timestamp when subscription ends (if cancelled)",
            "type": [
              "null",
              "integer"
            ]
          },
          "raw": {
            "$ref": "#/components/schemas/RawSubscription",
            "description": "Raw provider-specific subscription data"
